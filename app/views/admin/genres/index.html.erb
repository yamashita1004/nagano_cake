            <h4>ジャンル一覧.追加</h4>
            ジャンル名　<%= f.text_field :name %>
            
            <%= f.submit '新規登録', class: 'btn btn-success' %>
            <% end %>
            <h4>ジャンル</h4>
            <% @genres.each do |genre| %>
            <%= genre.name %>
            <%= link_to "編集する", edit_admin_genre_path(genre.id), class: 'btn btn-success' %></br>
            <% end %>
  