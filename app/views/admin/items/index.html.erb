<script src="https://kit.fontawesome.com/5426e91a66.js" crossorigin="anonymous"></script>



<div class="guide-plate d-flex align-items-center justify-content-center">
  <div class=admin-page-title>商品一覧</div>
  <div class= "content-end">
       <%= link_to new_admin_item_path do %>
        <i class="fas fa-plus-circle fa-3x new-button"></i>
        <% end %>
        </div>
</div>


<div class="admin-products-cover1 d-flex align-items-center justify-content-center">
  <div class="admin-products-cover2 d-flex align-items-center justify-content-center">
    <div class="overflow-auto" style="width:100%; height:500px">
      <div class="container">
        <div class="row">
          <table class='table table-borderless table-hover'>
            <thead>
              <tr>
                <th>商品ID</th>
                <th>商品名</th>
                <th>税抜価格</th>
                <th>ジャンル</th>
                <th>ステータス</th>
              </tr>
            </thead>
            <tbody>
              <% @items.each do |item| %>
                <tr>
                  <td><%= item.id %></td>
                  <td><%=link_to  item.name, admin_item_path(item.id)%></td>
                  <td><%= item.price %></td>
                  <td></td>
                  <td>
                  <% if item.is_active  %>
                    <p class="text-success">販売中</p></br>
                    <% else %>
                    <p class="text-secondary">販売停止中</p></br>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
　　　  </div>
　　　</div>
    </div>
  </div>
</div>