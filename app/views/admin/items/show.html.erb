
       <div class="guide-plate d-flex align-items-center justify-content-center">
  <div class=admin-page-title>商品詳細</div>
</div>

<div class="admin-products-cover1 d-flex align-items-center justify-content-center">
  <div class="admin-products-cover2 d-flex align-items-center justify-content-center">
    <div class="overflow-auto" style="width:100%; height:500px">
      <div class="container">
        <div class="row">
          <div class="col-lg-1"></div>
          <div class="col-lg-3">
            <% if @item.image.attached? %>
            <%=image_tag @item.image, size: "200x200" %>
            <% else %>
             <%= image_tag 'no_image', size: "200x200" %>
             <% end %>
          </div>
          <div class="col-lg-1"></div>
          <div class="col-lg-7">
            <table class='table table-borderless'>
              <tr>
            	  <th>商品名</th>
            	  <td><%= @item.name %></td>
              </tr>
              <tr>
            	  <th>商品説明</th>
            	  <th><%= @item.introduction %></th>
              </tr>
              <tr>
            	  <th>ジャンル</th>
            	  <td></td>
              </tr>
              <tr>
            	  <th>税込価格</br>
                   (税抜価格）</th>
            	  <th>
            	    <%= @item.add_tax_sales_price.to_s(:dalimited) %>(<%= @item.price %>)円
            	  </th>
              </tr>
              <tr>
            	  <th>販売ステータス</th>
            	  <th>
                    <% if @item.is_active  %>
                    <span class="text-success">販売中</span></br>
                    <% else %>
                    <span class="text-secondary">販売停止中</span></br>
                    <% end %>
                </th>
              </tr>
              <tr>
                <th><%= link_to "編集する", edit_admin_item_path(@item.id), class:"btn btn-success" %></th>
              </tr>
            </table>
          </div>
　　　  </div>
　　　</div>
    </div>
  </div>
</div>


